@model GetEmployeeVM

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Details for @Model.Name</h2>
<hr />

<div class="row">

    <div class="col-md-4">
        <img src="~/Files/Images/@(Model.ImageUrl ?? "default.png")"
             alt="@Model.Name"
             class="img-fluid rounded-start"
             style="max-width: 100%; height: auto; object-fit: cover;">
    </div>

    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-4">@SharedLocalizer["ID"]:</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4">@SharedLocalizer["Name"]:</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">@SharedLocalizer["Age"]:</dt>
            <dd class="col-sm-8">@Model.Age</dd>

            <dt class="col-sm-4">@SharedLocalizer["Salary"]:</dt>
            <dd class="col-sm-8">@Model.Salary</dd>

            <dt class="col-sm-4">@SharedLocalizer["Department"]:</dt>
            <dd class="col-sm-8">@Model.DepartmentName</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">@SharedLocalizer["Edit"]</a>
    <a asp-action="Index" class="btn btn-outline-secondary">@SharedLocalizer["Back"]</a>
</div>